---
layout: page
---

<style>
  .custom-card {
    background: none;
    border: none;
    box-shadow: none;
  }
  .custom-card .card-body {
    background: none;
    padding-top: 0; /* Remove padding at the top of the card body */
  }
  .custom-card-title a {
    color: #BF40BF;
    text-decoration: none;
  }
  .custom-card img {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    object-fit: cover;
    margin-bottom: 0; /* Remove margin at the bottom of the image */
  }
  .custom-card h5 {
    margin-top: 10px; /* Adjust margin to reduce the gap */
    margin-bottom: 0; /* Remove margin at the bottom of the title */
  }
  .custom-container {
    padding: 0 15px;
  }
</style>

<div class="post">
  <article>
    {% if page.profiles %}
      <div class="container custom-container">
        <!-- Centered Top Card -->
        <div class="row mb-4">
          <div class="col-12 text-center">
            <div class="custom-card mx-auto" style="max-width: 300px;">
              <img src="{{ '/assets/img/sri_img.png' | relative_url }}" class="card-img-top img-fluid" alt="Custom Image">
              <div class="card-body">
                <h5 class="card-title custom-card-title"><a href="https://sail.usc.edu/people/shri.html">Shrikanth (Shri) Narayanan</a></h5>
                <p class="card-text">USC VP for Presidential Initiatives, University Professor</p>
                <p class="card-text">shri at usc.edu</p>
              </div>
            </div>
          </div>
        </div>

        <!-- New Heading -->
        <div class="row mb-2">
          <div class="col-12">
            <h2>PhD Students</h2>
          </div>
        </div>

        <!-- Profiles Grid -->
        <div class="row">
        {% for profile in page.profiles %}
          <div class="col-lg-3 col-md-4 col-sm-6 mb-2">
            <div class="custom-card h-100 text-center">
              <img src="{{ '/assets/img/' | append: profile.image | relative_url }}" class="card-img-top" alt="Profile Image">
              <div class="card-body d-flex flex-column justify-content-between">
                <div class="card-text">
                  <h5 class="card-title custom-card-title"><a href="{{ profile.link }}">{{ profile.name }}</a></h5>
                  <h6 class="card-title custom-card-title">{{ profile.course }}</h6>
                  {% if profile.more_info %}
                    <p>{{ profile.more_info | markdownify }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
        </div>
        </div>

        <div class="row mb-2">
          <div class="col-12">
            <h2>Undergraduates</h2>
          </div>
        </div>

        {% for profile in page.ug_profiles %}
          <ul class="profile-list">
            <li>
              <p class="custom-card-title">{{ profile.name }}, {{ profile.course }}</p>
            </li>
          </ul>
        {% endfor %}
      </div>
    {% endif %}
  </article>
</div>

  <div class="row mb-4">
    <div class="col-12">
      <h2 class="mb-4">Photo Gallery</h2>
    </div>

<!-- Carousel -->
<div class="container mb-4">
<div id="profileCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#profileCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#profileCarousel" data-slide-to="1"></li>
    <li data-target="#profileCarousel" data-slide-to="2"></li>
    <li data-target="#profileCarousel" data-slide-to="3"></li>
    <li data-target="#profileCarousel" data-slide-to="4"></li>
    <li data-target="#profileCarousel" data-slide-to="5"></li>
  </ol>

  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="ccmi/assets/img/team/1.jpg" class="d-block w-100" alt="Image 1">
    </div>
    <div class="carousel-item">
      <img src="ccmi/assets/img/team/2.jpg" class="d-block w-100" alt="Image 2">
    </div>
    <div class="carousel-item">
      <img src="ccmi/assets/img/team/3.jpg" class="d-block w-100" alt="Image 3">
    </div>
    <div class="carousel-item">
      <img src="ccmi/assets/img/team/4.jpg" class="d-block w-100" alt="Image 3">
    </div>
    <div class="carousel-item">
      <img src="{{ '/assets/img/team/5.png' | relative_url }}" class="d-block w-100" alt="Image 3">
    </div>
  </div>

  <!-- Controls -->
  <a class="carousel-control-prev" href="#profileCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#profileCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>

